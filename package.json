{
  "name": "beeper-pulse",
  "version": "1.0.0",
  "description": "Full monitoring suite for the Beeper ecosystem - version tracking, notifications, visualizations, and status monitoring",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "fetch:official": "pnpm --filter @beeper-pulse/core run fetch:official",
    "fetch:community": "pnpm --filter @beeper-pulse/core run fetch:community",
    "notify": "pnpm --filter @beeper-pulse/notifications run send",
    "notify:status": "pnpm --filter @beeper-pulse/notifications run notify:status",
    "notify:releases": "pnpm --filter @beeper-pulse/notifications run notify:releases",
    "status:check": "pnpm --filter @beeper-pulse/status run check",
    "web:dev": "pnpm --filter @beeper-pulse/web run dev",
    "web:build": "pnpm --filter @beeper-pulse/web run build"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
