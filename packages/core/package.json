{
  "name": "@beeper-pulse/core",
  "version": "1.0.0",
  "description": "Core automation - version tracking, changelog generation, snapshot diffing",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./types": "./dist/lib/types.js",
    "./fetchers": "./dist/lib/fetchers.js",
    "./diff": "./dist/lib/diff.js",
    "./templates": "./dist/lib/templates.js",
    "./feeds": "./dist/lib/feeds.js"
  },
  "scripts": {
