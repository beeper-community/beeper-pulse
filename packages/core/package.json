  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "date-fns": "^3.0.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
